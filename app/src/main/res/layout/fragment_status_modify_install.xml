<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fragment_horizontal_margin"
        android:paddingTop="@dimen/fragment_vertical_margin"
        android:paddingRight="@dimen/fragment_horizontal_margin"
        android:paddingBottom="@dimen/fragment_vertical_margin"
        tools:context=".fragments.StatusModifyFragment">

        <TextView
            android:id="@+id/companyNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/companyNameLabel"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firstLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="Felderítés: "
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secondLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:text="Státusz1: "
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fourthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="228dp"
            android:text="Státusz2: "
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/companyNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bar 15A"
            android:textSize="21sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toEndOf="@+id/companyNameLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/commentInput"
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:layout_marginTop="630dp"
            android:background="@drawable/custom_input"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm_ -.QWERTYUIOPASDFGHJKLZXCVBNMáéőúüóűöÖíÁÉŐÚŰÓÜÍ"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fadingEdge="vertical"
            android:hint="@string/commentAddHint"
            android:inputType="none"
            android:maxLength="15"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/modifyAddButton"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="700dp"
            android:text="@string/modifyDIDButtonText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toEndOf="@+id/modifyExitButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/modifyExitButton"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="700dp"
            android:text="@string/modifyExitButtonText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/firstItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="72dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:background="@drawable/gradient_spinner"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/firstLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/secondItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="132dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:background="@drawable/gradient_spinner"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/secondLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/fourthItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="232dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:background="@drawable/gradient_spinner"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/fourthLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/thirdItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="172dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Kirakva:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/fifthItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="276dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Elosztó:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sixthItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="324dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Áram:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/eightItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="424dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="PTG:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/eleventhItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="576dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Helyszín:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switchPadding="-15dp"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/seventhItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="376dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Hálozat:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/ninethItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="476dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Szoftver:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switchPadding="-15dp"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/tenthItem"
            android:layout_width="104dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="524dp"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:text="Param:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:thumbTint="@color/switch_thumb_selector"
            app:trackTint="@color/switch_track_selector" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>